version: '3.1'
secrets:
  os_admin:
    file: ./secrets/adminsecret.env
  os_user:
    file: ./secrets/usersecret.env
services:
  server:
    secrets:
      - os_admin
      - os_user
    build:
      context: ./server
      args:
        # Change according to your details
        REPOSITORY_URL: https://github.com/OpenSlides/OpenSlides.git
        GIT_CHECKOUT: master
    # Below is the default command.  You can uncomment it to override the
    # number of workers, for example:
    # command: "gunicorn -w 8 -b 0.0.0.0:8000 -k uvicorn.workers.UvicornWorker
    #   openslides.asgi:application"
    #
    # Uncomment the following line to use daphne instead of gunicorn:
    # command: "daphne -b 0.0.0.0 -p 8000 openslides.asgi:application"
    restart: always
    volumes:
      - "personaldata:/app/personal_data"
      - "staticfiles:/app/openslides/static"
    depends_on:
      - postfix
      - postgres
      - redis
      - rediscache
    networks:
      - front
      - back
    sysctls:
      net.core.somaxconn: 1024
      net.ipv4.ip_local_port_range: 1024 60999
  prioserver:
    secrets:
      - os_admin
      - os_user
    build:
      context: ./server
      args:
        REPOSITORY_URL: https://github.com/OpenSlides/OpenSlides.git
        GIT_CHECKOUT: master
    command: "gunicorn -w 1 -b 0.0.0.0:8000 -k uvicorn.workers.UvicornWorker
      openslides.asgi:application"
    restart: always
    volumes:
      - "personaldata:/app/personal_data"
      - "staticfiles:/app/openslides/static"
    depends_on:
      - postfix
      - postgres
      - redis
      - rediscache
      - server
    networks:
      - front
      - back
  redis:
    image: redis:alpine
    restart: always
    volumes:
      - "redisdata:/data"
    networks:
      - back
  rediscache:
    image: redis:alpine
    restart: always
    command: ["redis-server", "--save", ""]
    networks:
      - back
  client:
    image: nginx
    restart: always
    volumes:
      - "staticfiles:/usr/share/nginx/html"
      - "./client/nginx.conf:/etc/nginx/nginx.conf"
    depends_on:
      - server
    networks:
      - front
    ports:
      - "127.0.0.1:61000:80"
  postgres:
    image: sameersbn/postgresql:10
    labels:
      org.openslides.role: "postgres"
    restart: always
    volumes:
      - "dbdata:/var/lib/postgresql"
    environment:
      - DB_USER=openslides
      - DB_PASS=openslides
      - DB_NAME=openslides
    networks:
      - back
  postfix:
    build: ./postfix
    image: postfix
    restart: always
    environment:
      - MYHOSTNAME=localhost
      - RELAYHOST=localhost
    networks:
      - back
volumes:
  dbdata:
  personaldata:
  redisdata:
  staticfiles:
networks:
  front:
  back:

